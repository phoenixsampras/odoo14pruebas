<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_resumen_por_ventas_por_utilidad" model="ir.ui.view">
            <field name="name">resumen por ventas por utilidad</field>
            <field name="model">as.resumen.ventas.utilidad</field>
            <field name="arch" type="xml">
                <form string="resumen por ventas por utilidad">
                    <group col="4">
                        <field name="start_date"/>
                        <field name="end_date"/>
