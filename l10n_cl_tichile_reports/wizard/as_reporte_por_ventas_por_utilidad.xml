<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_resumen_ventas_utilidad_view" model="ir.ui.view">
            <field name="name">Informe de Ventas y Utilidad</field>
            <field name="model">as.resumen.ventas.utilidad</field>
            <field name="arch" type="xml">
                <form string="Informe de Ventas y Utilidad">
                    <group col="4">
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <!-- <field name="partner_ids" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/> -->
                        <field name="location_ids" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                        <field name="user_ids" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                        <!-- <field name="city_ids" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/> -->
                    </group>
                    <footer>
                        <button name="export_xls" 
                            type="object" 
                            default_focus="1"
                            string="Exportar Excel" 
                            context="{'xls_export':1}"
                            icon="fa-print"
                            class="oe_highlight"/>
                          <!-- <button name="export_pdf" 
                            type="object" 
                            default_focus="1"
                            string="Exportar PDF" 
                            context="{'xls_export':1}"
                            icon="fa-print"
                            class="oe_highlight"/> -->
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="as_resumen_por_ventas_por_utilidad" model="ir.actions.act_window">
            <field name="name">Informe de Ventas y Utilidad</field>
            <field name="res_model">as.resumen.ventas.utilidad</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_resumen_ventas_utilidad_view"/>
            <field name="target">new</field>
        </record>
         

        <menuitem id="as_resumen_ventas_utilidad_id" name="Informe de Ventas y Utilidad" action="as_resumen_por_ventas_por_utilidad" parent="sale.menu_sale_report" sequence="10"/>
    </data>
</odoo>