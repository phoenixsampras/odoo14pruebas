                        <field name="location_ids" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                        <field name="user_ids" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                        <field name="city_ids" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                    </group>
                    <footer>
                        <button name="export_xls" 
                            type="object" 
                            default_focus="1"
                            string="Exportar Excel" 
                            context="{'xls_export':1}"
                            icon="fa-print"
                            class="oe_highlight"/>
                          <button name="export_pdf" 
                            type="object" 
                            default_focus="1"
                            string="Exportar PDF" 
                            context="{'xls_export':1}"
                            icon="fa-print"
                            class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="as_resumen_por_ventas_por_utilidad" model="ir.actions.act_window">
            <field name="name">resumen por ventas por utilidad</field>
            <field name="res_model">as.resumen.ventas.utilidad</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="resumen_por_ventas_por_utilidad"/>
            <field name="target">new</field>
        </record>
        
        <report
            id="as_resumen_por_ventas_por_utilidad"
            model="as.resumen.ventas.utilidad"
            string="resumen_por_ventas_por_utilidad"
            report_type="xlsx"
            name="l10n_cl_tichile_reports.resumen_por_ventas_por_utilidad.xlsx"
            file="l10n_cl_tichile_reports.resumen_por_ventas_por_utilidad.xlsx"
            attachment_use="False"
            menu="False"
        />
        <menuitem id="as_resumen_por_ventas_por_utilidad" name="resumen por ventas por utilidad" action="as_resumen_por_ventas_por_utilidad" parent="as_menu_cobranza" sequence="9"/>
