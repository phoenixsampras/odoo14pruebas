<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_reporte_por_facturas_emitidas" model="ir.ui.view">
            <field name="name">reporte por facturas emitidas</field>
            <field name="model">as.reporte.facturas.emitidas</field>
            <field name="arch" type="xml">
                <form string="reporte por facturas emitidas">
                    <group col="4">
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="partner_ids" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                        <field name="location_ids" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                        <field name="user_ids" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                        <field name="city_ids" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                    </group>
                    <footer>
                        <button name="export_xls" 
                            type="object" 
                            default_focus="1"
                            string="Exportar Excel" 
                            context="{'xls_export':1}"
                            icon="fa-print"
                            class="oe_highlight"/>
                          <button name="export_pdf" 
                            type="object" 
                            default_focus="1"
                            string="Exportar PDF" 
                            context="{'xls_export':1}"
                            icon="fa-print"
                            class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="as_reporte_por_facturas_emitidas" model="ir.actions.act_window">
            <field name="name">reporte por facturas emitidas</field>
            <field name="res_model">as.reporte.facturas.emitidas</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="reporte_facturas_emitidas"/>
            <field name="target">new</field>
        </record>
        
        <report
            id="as_facturas_por_producto_report"
            model="as.reporte.facturas.emitidas"
            string="reporte por facturas emitidas"
            report_type="xlsx"
            name="l10n_cl_tichile_reports.reporte.facturas.emitidas.xlsx"
            file="l10n_cl_tichile_reports.reporte.facturas.emitidas.xlsx"
            attachment_use="False"
            menu="False"
        />
        <menuitem id="as_reporte_facturas_emitidas" name="reporte por facturas emitidas" action="as_reporte por facturas emitidas" parent="as_menu_cobranza" sequence="10"/>
    </data>
</odoo>